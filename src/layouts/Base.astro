---

<html lang="en" class="bg-[rgb(var(--bg))] text-[rgb(var(--fg))]">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    {meta}
    <link rel="icon" type="image/svg+xml" href="/e.svg" />

    <!-- Performance: DNS prefetch and preconnect for fonts -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Performance: Preload critical Rubik font with async loading -->
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet" /></noscript>

    <!-- Performance: Async load signature font (non-critical) -->
    <link href="https://fonts.googleapis.com/css2?family=Reenie+Beanie&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
    <noscript><link href="https://fonts.googleapis.com/css2?family=Reenie+Beanie&display=swap" rel="stylesheet" /></noscript>
    
  </head>
  <body class="overflow-x-hidden">
    <div id="loading" class="fixed inset-0 bg-[rgb(var(--bg))] flex items-center justify-center z-50 transition-opacity duration-200">
      <span class="text-sm text-neutral-500">Loading</span>
    </div>
    <PixelTrail />
    <div class="page-shell" id="page-shell">
      <aside class="rail rail-left" aria-hidden="true">
        <div class="rail-card rail-card-left rail-card-waterloo" data-label="Present CS student at Waterloo"></div>
      </aside>
      <div class="page-main">
        <div class="prose-measure">
      <header class="py-6 border-b border-neutral-200 relative overflow-x-hidden">
        <div class="header-inner">
          {showSignature && (
            <div class="header-signature">
              <Signature />
            </div>
          )}
          <div class="header-nav">
            <Nav />
          </div>
        </div>
      </header>
      <main class="pt-3 pb-32">
        <slot />
      </main>
        </div>
        {showContactForm && (
          <footer class="prose-measure pb-32" id="contact-card">
            <div class="email-card">
              <div class="email-card-copy">
                <p class="email-card-eyebrow">◆ Email</p>
                <h2 class="email-card-title">Let’s connect.</h2>
                <p class="email-card-text">
                  Reach me directly at <a href="mailto:elrichchen123@gmail.com" class="email-card-inline">elrichchen123@gmail.com</a>.
                </p>
                <a href="mailto:elrichchen123@gmail.com" class="email-card-link">Send an email</a>
              </div>
              <div class="email-card-polaroid">
                <Polaroid
                  src="/photos/elrich_photos/Elrich_Headshot.png"
                  alt="Elrich Chen"
                  caption="Say hi"
                  rotation={-2}
                />
                <div class="email-card-icons" aria-label="Social links">
                  {contactLinks.map((link) => (
                    <a
                      href={link.href}
                      aria-label={link.label}
                      class="email-card-icon"
                      target={link.href.startsWith('mailto:') ? undefined : '_blank'}
                      rel={link.href.startsWith('mailto:') ? undefined : 'noopener noreferrer'}
                    >
                      <span class="email-card-icon-svg" set:html={link.icon}></span>
                    </a>
                  ))}
                </div>
              </div>
            </div>
          </footer>
        )}
      </div>
      <aside class="rail rail-right" aria-hidden="true">
        <div class="rail-card rail-card-right rail-card-top rail-card-queens" data-label="Ex-Queen's student"></div>
        <div class="rail-card rail-card-right rail-card-bottom rail-card-uoft" data-label="UofT Residence Counsellor"></div>
      </aside>
    </div>
    <div id="dark-mode-toast" class="dark-mode-toast" role="status" aria-live="polite">
      <div class="dark-mode-toast-content">
        <span class="dark-mode-toast-label">Try dark mode?</span>
        <button type="button" class="dark-mode-toast-cta">Switch</button>
        <button type="button" class="dark-mode-toast-dismiss" aria-label="Dismiss">×</button>
      </div>
    </div>
    <script is:inline>
      // Optimized loading state - hide faster for better perceived performance
      function hideLoading() {
        const loading = document.getElementById('loading');
        if (loading) {
          loading.style.opacity = '0';
          setTimeout(() => {
            loading.style.display = 'none';
          }, 200);
        }
      }

      // Improved loading detection
      if (document.readyState === 'complete') {
        hideLoading();
      } else {
        window.addEventListener('load', hideLoading);
        // Reduced fallback timeout from 3s to 1s for better UX
        setTimeout(hideLoading, 1000);
      }

      // One-time dark mode prompt (fixed position, no layout shift).
      document.addEventListener('DOMContentLoaded', () => {
        const toast = document.getElementById('dark-mode-toast');
        if (!toast) return;

        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const isDark = stored ? stored === 'dark' : prefersDark;
        if (isDark) return;

        const seenKey = 'darkModePromptSeen';
        if (!localStorage.getItem(seenKey)) {
          toast.classList.add('is-visible');
          localStorage.setItem(seenKey, '1');
        }

        const cta = toast.querySelector('.dark-mode-toast-cta');
        const dismiss = toast.querySelector('.dark-mode-toast-dismiss');
        const hideToast = () => toast.classList.remove('is-visible');

        cta?.addEventListener('click', () => {
          const toggle = document.getElementById('theme-toggle');
          if (toggle instanceof HTMLButtonElement) {
            toggle.click();
          }
          hideToast();
        });

        dismiss?.addEventListener('click', hideToast);
      });
    </script>
    <style>
      .email-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 2.5rem;
        padding: 2.5rem;
        border: 1px solid rgba(var(--border), 0.2);
        border-radius: 18px;
        background: rgba(var(--bg), 0.6);
        backdrop-filter: blur(8px);
      }

      .email-card-copy {
        flex: 1;
        min-width: 0;
      }

      .email-card-eyebrow {
        margin: 0 0 0.6rem;
        font-size: 0.75rem;
        letter-spacing: 0.18em;
        text-transform: uppercase;
        color: rgb(var(--muted));
        font-weight: 600;
      }

      .email-card-title {
        margin: 0 0 0.5rem;
        font-size: 1.4rem;
        font-weight: 600;
        color: rgb(var(--fg));
      }

      .email-card-text {
        margin: 0 0 1.2rem;
        color: rgb(var(--muted));
        font-size: 0.98rem;
        line-height: 1.6;
      }

      .email-card-inline {
        color: rgb(var(--fg));
        font-weight: 600;
        text-decoration: none;
        border-bottom: 1px solid rgba(var(--border), 0.3);
      }

      .email-card-inline:hover {
        color: rgb(var(--fg));
        border-bottom-color: rgba(var(--border), 0.6);
      }

      .email-card-link {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.55rem 1.1rem;
        border-radius: 999px;
        border: 1px solid rgba(var(--border), 0.25);
        color: rgb(var(--fg));
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 600;
        background: rgba(255, 255, 255, 0.7);
        transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
      }

      .email-card-link:hover {
        transform: translateY(-1px);
        border-color: rgba(var(--border), 0.5);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
      }

      .email-card-polaroid .polaroid {
        margin-top: 0;
      }

      .email-card-polaroid :global(.polaroid-photo img) {
        transform: scale(1.25);
        transform-origin: 50% 30%;
        filter: brightness(1.28) contrast(1.05) saturate(1.05);
      }

      .email-card-icons {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        margin-top: 0.9rem;
      }

      .email-card-icon {
        width: 34px;
        height: 34px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: rgb(var(--fg));
        border: 1px solid rgba(var(--border), 0.2);
        text-decoration: none;
        transition: transform 0.2s ease, border-color 0.2s ease, background 0.2s ease;
      }

      .email-card-icon:hover {
        transform: translateY(-2px);
        border-color: rgba(var(--border), 0.5);
        background: rgba(var(--border), 0.08);
      }

      .email-card-icon-svg {
        display: inline-flex;
        width: 16px;
        height: 16px;
      }

      .email-card-icon svg {
        width: 100%;
        height: 100%;
      }

      :global(html.dark) .email-card {
        border-color: rgba(255, 255, 255, 0.12);
        background: rgba(16, 16, 16, 0.7);
      }

      :global(html.dark) .email-card-link {
        background: rgba(26, 26, 26, 0.8);
        border-color: rgba(255, 255, 255, 0.15);
      }

      :global(html.dark) .email-card-icon {
        border-color: rgba(255, 255, 255, 0.2);
        background: rgba(12, 12, 12, 0.4);
      }

      :global(html.dark) .email-card-icon:hover {
        border-color: rgba(255, 255, 255, 0.4);
        background: rgba(255, 255, 255, 0.1);
      }

      :global(html.dark) .email-card-link:hover {
        box-shadow: 0 10px 24px rgba(0, 0, 0, 0.4);
      }

      .page-shell {
        position: relative;
        display: grid;
        grid-template-columns: minmax(0, 1fr) minmax(0, 42rem) minmax(0, 1fr);
        gap: clamp(1.5rem, 4vw, 3.5rem);
        align-items: start;
      }

      .page-main {
        min-width: 0;
      }

      .header-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.75rem;
        flex-wrap: nowrap;
      }

      .header-signature {
        flex: 0 0 auto;
      }

      .header-nav {
        flex: 0 1 auto;
        display: flex;
        justify-content: flex-end;
      }

      .rail {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4.5rem;
        pointer-events: auto;
      }

      .rail-left {
        align-items: flex-end;
        padding-top: 16vh;
      }

      .rail-right {
        align-items: flex-start;
        padding-top: 10vh;
      }

      .rail-card {
        position: sticky;
        top: clamp(4rem, 10vh, 7rem);
        width: clamp(180px, 16vw, 240px);
        height: clamp(110px, 10vw, 150px);
        border-radius: 14px;
        border: 2px solid rgba(var(--border), 0.45);
        background-color: rgba(240, 240, 240, 0.95);
        box-shadow: 0 20px 38px rgba(15, 23, 42, 0.18);
        backdrop-filter: blur(6px);
        background-position: center;
        background-repeat: no-repeat;
        background-size: 120%;
        cursor: pointer;
        opacity: 0;
        transform: translateX(var(--offset, 0px)) rotate(var(--tilt, 0deg)) scale(0.92);
        transition: transform 0.45s cubic-bezier(0.2, 0.85, 0.25, 1.2), opacity 0.25s ease;
        pointer-events: none;
      }

      .page-shell.id-cards-open .rail-card {
        opacity: 1;
        transform: translateX(0) rotate(var(--tilt, 0deg)) scale(1);
        pointer-events: auto;
      }

      .rail-card::after {
        content: attr(data-label);
        position: absolute;
        left: 50%;
        top: calc(100% + 14px);
        transform: translate(-50%, 6px) scale(0.98);
        padding: 0.5rem 0.7rem;
        border-radius: 10px;
        background: rgba(10, 10, 10, 0.86);
        color: #fff;
        font-size: 0.72rem;
        font-weight: 500;
        letter-spacing: 0.02em;
        white-space: nowrap;
        opacity: 0;
        transition: opacity 0.2s ease, transform 0.2s ease;
        pointer-events: none;
      }

      .rail-card::before {
        content: '';
        position: absolute;
        left: 50%;
        top: calc(100% + 6px);
        width: 10px;
        height: 10px;
        background: rgba(10, 10, 10, 0.86);
        transform: translateX(-50%) rotate(45deg);
        opacity: 0;
        transition: opacity 0.2s ease, transform 0.2s ease;
      }

      .rail-card:hover::after,
      .rail-card:hover::before {
        opacity: 1;
        transform: translate(-50%, 0) scale(1);
      }

      .rail-card:hover::before {
        transform: translateX(-50%) rotate(45deg);
      }

      :global(html.dark) .rail-card {
        border-color: rgba(255, 255, 255, 0.2);
        background-color: rgba(25, 25, 25, 0.9);
        box-shadow: 0 22px 42px rgba(0, 0, 0, 0.45);
      }

      .rail-card-waterloo {
        background-image: url('/photos/elrich_photos/watiam.png');
      }

      .rail-card-queens {
        background-image: url('/photos/elrich_photos/queens.png');
      }

      .rail-card-uoft {
        background-image: url('/photos/elrich_photos/uoft.png');
      }

      :global(html.dark) .rail-card-waterloo,
      :global(html.dark) .rail-card-queens,
      :global(html.dark) .rail-card-uoft {
        background-size: 130%;
      }

      .rail-card-left {
        --tilt: -3deg;
        --offset: -70px;
        transition-delay: 0s;
        margin-top: clamp(6rem, 18vh, 12rem);
      }

      .rail-card-top {
        --tilt: 2.5deg;
        --offset: 70px;
        transition-delay: 0.12s;
        margin-top: clamp(2rem, 6vh, 5rem);
      }

      .rail-card-bottom {
        --tilt: -2deg;
        --offset: 70px;
        transition-delay: 0.24s;
        margin-top: clamp(8rem, 24vh, 14rem);
      }

      @media (max-width: 1024px) {
        .page-shell {
          grid-template-columns: minmax(0, 1fr);
        }

        .rail {
          display: none;
        }
      }

      @media (max-width: 640px) {
        .header-inner {
          gap: 0.5rem;
        }
      }

      .dark-mode-toast {
        position: fixed;
        right: clamp(1rem, 4vw, 2rem);
        top: clamp(1rem, 4vw, 2rem);
        z-index: 40;
        opacity: 0;
        transform: translateY(-10px);
        pointer-events: none;
        transition: opacity 0.2s ease, transform 0.2s ease;
      }

      .dark-mode-toast.is-visible {
        opacity: 1;
        transform: translateY(0);
        pointer-events: auto;
      }

      .dark-mode-toast-content {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 0.6rem 0.8rem;
        border-radius: 999px;
        border: 1px solid rgba(var(--border), 0.2);
        background: rgba(var(--bg), 0.92);
        color: rgb(var(--fg));
        box-shadow: 0 14px 28px rgba(15, 23, 42, 0.12);
        backdrop-filter: blur(10px);
      }

      .dark-mode-toast-label {
        font-size: 0.85rem;
        font-weight: 500;
      }

      .dark-mode-toast-cta {
        border: none;
        border-radius: 999px;
        padding: 0.25rem 0.7rem;
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        background: rgba(var(--border), 0.1);
        color: rgb(var(--fg));
        cursor: pointer;
        transition: transform 0.2s ease, background 0.2s ease;
      }

      .dark-mode-toast-cta:hover {
        transform: translateY(-1px);
        background: rgba(var(--border), 0.2);
      }

      .dark-mode-toast-dismiss {
        border: none;
        background: transparent;
        color: rgb(var(--muted));
        font-size: 1rem;
        line-height: 1;
        cursor: pointer;
        padding: 0 0.2rem;
      }

      :global(html.dark) .dark-mode-toast-content {
        border-color: rgba(var(--border), 0.35);
        box-shadow: 0 14px 28px rgba(0, 0, 0, 0.45);
      }

      @media (max-width: 768px) {
        .email-card {
          flex-direction: column;
          align-items: flex-start;
          padding: 2rem;
        }

        .email-card-polaroid {
          width: 100%;
          display: flex;
          justify-content: flex-start;
        }
      }
    </style>
  </body>
</html>
