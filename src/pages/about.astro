---
import Base from '../layouts/Base.astro';
import Polaroid from '../components/Polaroid.astro';
import { getEntry } from 'astro:content';
const bio = await getEntry('bio', 'bio');
const { Content } = await bio.render();
---

<Base title="About – Elrich Chen">
  <div class="mb-6">
    <a href="/" class="text-sm text-neutral-500 hover:text-neutral-900 transition-colors">← Back to home</a>
  </div>
  <h1 class="text-xl font-semibold mb-6">About</h1>
  
  <div class="about-container">
    <!-- Polaroid Photo -->
    <div class="polaroid-wrapper">
      <Polaroid 
        src="/photos/elrich_photos/gym.jpeg" 
        alt="Elrich Chen" 
        caption="Building things & breaking code"
        rotation={-3}
      />
    </div>
    
    <!-- Bio Content -->
    <article class="prose prose-neutral max-w-none space-y-4 text-sm leading-relaxed bio-content">
      <Content />
    </article>
  </div>
</Base>

<style>
  .about-container {
    display: flex;
    gap: 2rem;
    align-items: start;
  }

  .polaroid-wrapper {
    flex-shrink: 0;
    margin-top: 0.5rem;
  }

  .bio-content {
    flex: 1;
    min-width: 0;
  }

  @media (max-width: 768px) {
    .about-container {
      flex-direction: column;
      align-items: center;
    }
    
    .polaroid-wrapper {
      margin-bottom: 1.5rem;
    }
  }
</style>


