const tldr = {
  hook: 'CS @ Waterloo, Aspring Backend Engineer.',
  body: "I build across student orgs and freelance projects, and I care about clarity, reliability, and community impact.",
};

const education = [
  {
    school: 'University of Waterloo',
    degree: 'Bachelors in Computer Science',
    period: 'Expected 2029',
    logo: '/logos/uwaterloo.png',
  },
  {
    school: "Queen's University",
    degree: 'Bachelors in Computer Science',
    period: '2023 – 2024',
    logo: '/logos/queensu.png',
  },
];

const techStack = {
  Languages: ['C', 'TypeScript', 'Python', 'Java', 'JavaScript', 'Bash', 'SQL'],
  Frameworks: ['React', 'Next.js', 'Flask', 'FastAPI', 'TailwindCSS', 'PostgresSQL'],
  Tools: ['Figma', 'GitHub', 'Notion', 'MongoDB', 'Git'],
};
---

<Base title="About – Elrich Chen">
  <div class="mb-6">
    <a href="/" class="text-sm text-neutral-500 hover:text-neutral-900 transition-colors">← Back to home</a>
  </div>

  <div class="about-shell">
    <div class="about-grid">
      <aside class="about-sidebar">
        <div class="profile-card">
          <div class="polaroid-wrapper" id="polaroid-stack">
            <div class="polaroid-item" data-index="0">
              <Polaroid
                src="/photos/elrich_photos/gym.jpeg"
                alt="Elrich at the gym"
                caption="Staying active"
                rotation={-3}
              />
            </div>
            <div class="polaroid-item" data-index="2">
              <Polaroid
                src="/photos/elrich_photos/IMG_7489.jpeg"
                alt="Elrich"
                caption="Making memories"
                rotation={2}
              />
            </div>
            <div class="polaroid-item" data-index="1">
              <Polaroid
                src="/photos/elrich_photos/IMG_8352.jpeg"
                alt="Elrich"
                caption="Exploring new hobbies"
                rotation={-2}
              />
            </div>
            <div class="click-indicator">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
                <path d="M3 3v5h5"/>
              </svg>
              <span>Click to cycle</span>
            </div>
          </div>

          <div class="profile-text">
            <h2 class="profile-name">Elrich Chen</h2>
            <p class="profile-title">CS @ Waterloo</p>
          </div>

          <div class="status-badge">
            <span class="status-dot" aria-hidden="true"></span>
            <span>Open to Co-op (Summer 2026)</span>
          </div>

          <div class="stats-grid">
            {stats.map((stat) => (
              <div class="stat-item">
                <span class="stat-value">{stat.value}</span>
                <span class="stat-label">{stat.label}</span>
              </div>
            ))}
          </div>

          <div class="social-row" aria-label="Social links">
            {socials.map((link) => (
              <a
                href={link.href}
                aria-label={link.label}
                class="social-icon"
                target={link.href.startsWith('mailto:') ? undefined : '_blank'}
                rel={link.href.startsWith('mailto:') ? undefined : 'noopener noreferrer'}
              >
                <span class="social-icon-svg" set:html={link.icon}></span>
              </a>
            ))}
          </div>
        </div>
      </aside>

      <div class="about-cards">
        <section class="about-card tldr-card">
          <p class="card-eyebrow">TL;DR</p>
          <h2 class="tldr-hook">{tldr.hook}</h2>
          <p class="tldr-body">{tldr.body}</p>
        </section>

        <section class="about-card education-card">
          <p class="card-eyebrow">Education</p>
          <div class="edu-grid">
            {education.map((item) => (
              <div class="edu-card">
                <div class="edu-top">
                  <img src={item.logo} alt={item.school} class="edu-logo" loading="lazy" />
                  <span class="edu-period">{item.period}</span>
                </div>
                <h3 class="edu-school">{item.school}</h3>
                <p class="edu-degree">{item.degree}</p>
              </div>
            ))}
          </div>
          <p class="edu-note">Transferred from Queen's University to the University of Waterloo for Computer Science.</p>
        </section>

        <section class="about-card stack-card">
          <p class="card-eyebrow">Tech Stack</p>
          <div class="stack-groups">
            {Object.entries(techStack).map(([group, items]) => (
              <div class="stack-group">
                <h3 class="stack-label">{group}</h3>
                <div class="stack-badges">
                  {items.map((item) => (
                    <span class="stack-badge">{item}</span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </section>

        <section class="about-card beyond-card">
          <p class="card-eyebrow">Beyond the Keyboard</p>
          <div class="beyond-grid">
            <div class="beyond-item beyond-photo">
              <img src="/photos/elrich_photos/liondance.png" alt="Lion dance" loading="lazy" />
              <span>Lion Dancing</span>
            </div>
            <div class="beyond-item beyond-text">
              <h4>Teaching</h4>
              <p>Mentoring and workshops.</p>
            </div>
            <div class="beyond-item beyond-text">
              <h4>Climbing</h4>
              <p>Weekly bouldering reset.</p>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</Base>

<style>
  .about-shell {
    padding-bottom: 2.5rem;
  }

  .about-grid {
    display: grid;
    grid-template-columns: minmax(260px, 0.34fr) minmax(0, 1fr);
    gap: 2.5rem;
    align-items: start;
  }

  .about-sidebar {
    position: sticky;
    top: 1.5rem;
    align-self: start;
  }

  .profile-card {
    border: 1px solid rgba(var(--border), 0.2);
    border-radius: 18px;
    padding: 1.6rem;
    background: rgba(var(--bg), 0.7);
    box-shadow: 0 16px 32px rgba(15, 23, 42, 0.08);
    display: flex;
    flex-direction: column;
    gap: 1.3rem;
  }

  :global(html.dark) .profile-card {
    background: rgba(var(--bg), 0.55);
    border-color: rgba(var(--border), 0.3);
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.35);
  }

  .polaroid-wrapper {
    flex-shrink: 0;
    width: 220px;
    position: relative;
    min-height: 330px;
    margin: 0 auto;
  }

  .about-sidebar :global(.polaroid) {
    width: 100%;
    max-width: 220px;
  }

  .click-indicator {
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    padding: 0.25rem 0.6rem;
    background: rgba(var(--bg), 0.8);
    backdrop-filter: blur(4px);
    border: 1px solid rgba(var(--border), 0.15);
    border-radius: 6px;
    font-size: 0.7rem;
    color: rgb(var(--muted));
    opacity: 0;
    transition: all 0.3s ease;
  }

  .polaroid-item {
    position: absolute;
    top: 0;
    left: 0;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .polaroid-item:hover {
    transform: scale(1.05);
  }

  .polaroid-wrapper:hover .click-indicator {
    opacity: 1;
    bottom: 5px;
  }

  .polaroid-item[data-index="0"] {
    z-index: 1;
  }

  .polaroid-item[data-index="1"] {
    z-index: 2;
  }

  .polaroid-item[data-index="2"] {
    z-index: 3;
  }

  .profile-text {
    text-align: center;
  }

  .profile-name {
    margin: 0;
    font-size: 1.3rem;
    font-weight: 600;
    color: rgb(var(--fg));
  }

  .profile-title {
    margin: 0.2rem 0 0;
    font-size: 0.95rem;
    color: rgb(var(--muted));
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.35rem 0.7rem;
    border-radius: 999px;
    border: 1px solid rgba(34, 197, 94, 0.35);
    background: rgba(34, 197, 94, 0.08);
    font-size: 0.75rem;
    font-weight: 600;
    color: rgb(var(--fg));
    width: fit-content;
    margin: 0 auto;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #22c55e;
    box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.6);
    animation: pulse 1.6s ease-out infinite;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 0.8rem;
  }

  .stat-item {
    border-radius: 12px;
    border: 1px solid rgba(var(--border), 0.12);
    padding: 0.6rem 0.7rem;
    background: rgba(var(--bg), 0.6);
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 1.05rem;
    font-weight: 600;
    color: rgb(var(--fg));
  }

  .stat-label {
    display: block;
    font-size: 0.72rem;
    color: rgb(var(--muted));
    margin-top: 0.2rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .social-row {
    display: flex;
    justify-content: center;
    gap: 0.6rem;
  }

  .social-icon {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(var(--border), 0.06);
    color: rgb(var(--fg));
    border: 1px solid rgba(var(--border), 0.12);
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
  }

  .social-icon:hover {
    transform: translateY(-2px);
    border-color: rgba(var(--border), 0.3);
    box-shadow: 0 10px 18px rgba(15, 23, 42, 0.12);
  }

  .social-icon-svg {
    display: inline-flex;
    width: 18px;
    height: 18px;
  }

  .about-cards {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-bottom: 2rem;
  }

  .about-card {
    border: 1px solid rgba(var(--border), 0.18);
    border-radius: 18px;
    padding: 1.6rem 1.8rem;
    background: rgba(var(--bg), 0.75);
    box-shadow: 0 16px 32px rgba(15, 23, 42, 0.08);
  }

  :global(html.dark) .about-card {
    background: rgba(var(--bg), 0.55);
    border-color: rgba(var(--border), 0.3);
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.35);
  }

  .card-eyebrow {
    margin: 0 0 0.7rem;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: rgb(var(--muted));
    font-weight: 600;
  }

  .tldr-hook {
    margin: 0 0 0.6rem;
    font-size: 1.4rem;
    line-height: 1.3;
    color: rgb(var(--fg));
    max-width: 32ch;
  }

  .tldr-body {
    margin: 0;
    font-size: 0.95rem;
    color: rgb(var(--muted));
    line-height: 1.6;
    max-width: 60ch;
  }

  .edu-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1rem;
  }

  .edu-card {
    border: 1px dashed rgba(var(--border), 0.25);
    border-radius: 14px;
    padding: 1rem 1.1rem;
    background: rgba(var(--bg), 0.7);
  }

  .edu-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.7rem;
  }

  .edu-logo {
    width: 32px;
    height: 32px;
    object-fit: contain;
  }

  .edu-period {
    font-size: 0.72rem;
    color: rgb(var(--muted));
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .edu-school {
    margin: 0 0 0.2rem;
    font-size: 0.98rem;
    font-weight: 600;
    color: rgb(var(--fg));
  }

  .edu-degree {
    margin: 0;
    font-size: 0.86rem;
    color: rgb(var(--muted));
    line-height: 1.45;
  }

  .edu-note {
    margin: 0.9rem 0 0;
    font-size: 0.84rem;
    color: rgb(var(--muted));
    line-height: 1.5;
  }

  .stack-groups {
    display: grid;
    gap: 1rem;
  }

  .stack-label {
    margin: 0 0 0.4rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: rgb(var(--fg));
  }

  .stack-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.45rem;
  }

  .stack-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.3rem 0.65rem;
    border-radius: 999px;
    background: rgba(var(--border), 0.08);
    color: rgb(var(--fg));
    font-size: 0.75rem;
    font-weight: 500;
  }

  .beyond-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
    gap: 0.9rem;
  }

  .beyond-item {
    border-radius: 14px;
    border: 1px solid rgba(var(--border), 0.12);
    padding: 0.9rem;
    background: rgba(var(--bg), 0.7);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .beyond-photo img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-radius: 10px;
  }

  .beyond-photo span {
    font-size: 0.85rem;
    font-weight: 600;
    color: rgb(var(--fg));
  }

  .beyond-text h4 {
    margin: 0;
    font-size: 0.95rem;
    color: rgb(var(--fg));
  }

  .beyond-text p {
    margin: 0;
    font-size: 0.82rem;
    color: rgb(var(--muted));
    line-height: 1.4;
  }

  @media (max-width: 980px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .about-sidebar {
      position: static;
    }

    .polaroid-wrapper {
      margin-bottom: 0.5rem;
    }

    .about-sidebar :global(.polaroid) {
      max-width: 240px;
    }
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.6);
    }
    70% {
      box-shadow: 0 0 0 8px rgba(34, 197, 94, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(34, 197, 94, 0);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const polaroidItems = document.querySelectorAll('.polaroid-item');
    const totalItems = polaroidItems.length;

    polaroidItems.forEach((item) => {
      item.addEventListener('click', () => {
        // Cycle all items: increment each index, wrap around to 0 after reaching max
        polaroidItems.forEach((polaroid) => {
          const currentIndex = parseInt(polaroid.getAttribute('data-index') || '0');
          const nextIndex = (currentIndex + 1) % totalItems;
          polaroid.setAttribute('data-index', nextIndex.toString());
        });
      });
    });
  });
</script>
