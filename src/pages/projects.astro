---
import Base from '../layouts/Base.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const rendered = await Promise.all(
  projects.map(async (p) => {
    const { Content } = await p.render();
    return { entry: p, Content };
  })
);

// Group projects by category
const groupedProjects = rendered.reduce((acc, proj) => {
  const category = proj.entry.data.category || 'Other';
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(proj);
  return acc;
}, {} as Record<string, typeof rendered>);

const categories = Object.keys(groupedProjects).sort();
---

<Base title="Projects – Elrich Chen">
  <div class="mb-6">
    <a href="/" class="text-sm text-neutral-500 hover:text-neutral-900 transition-colors">← Back to home</a>
  </div>
  <h1 class="text-xl font-semibold mb-8">Projects</h1>

  <div class="projects-container pb-24">
    {categories.map((category) => (
      <section class="category-section">
        <h2 class="category-title">{category}</h2>
        <div class="projects-grid">
          {groupedProjects[category].map(({ entry: p, Content }) => (
            <article class={`project-card ${p.data.featured ? 'featured' : ''}`}>
              {/* Project Image */}
              {p.data.image && (
                <div class="card-image">
                  <img
                    src={p.data.image}
                    alt={p.data.name}
                    loading="lazy"
                    decoding="async"
                  />
                </div>
              )}

              <div class="card-content">
                {/* Project name + links */}
                <div class="card-header">
                  <h3 class="card-title">{p.data.name}</h3>
                  <div class="card-links">
                    {p.data.href && (
                      <a href={p.data.href} target="_blank" rel="noopener noreferrer" class="icon-link" title="View project">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>

                {/* Tagline */}
                {p.data.tagline && (
                  <p class="card-tagline">{p.data.tagline}</p>
                )}

                {/* Tech Tags */}
                {p.data.tags && p.data.tags.length > 0 && (
                  <div class="card-tags">
                    {p.data.tags.map((tag: string) => (
                      <span class="tag-pill">{tag}</span>
                    ))}
                  </div>
                )}

                {/* Highlights */}
                {p.data.highlights && p.data.highlights.length > 0 && (
                  <ul class="card-highlights">
                    {p.data.highlights.map((highlight: string) => (
                      <li>{highlight}</li>
                    ))}
                  </ul>
                )}

                {/* Metadata */}
                {(p.data.role || p.data.duration || p.data.year) && (
                  <div class="card-meta">
                    {p.data.role && <span class="meta-item">{p.data.role}</span>}
                    {p.data.duration && <span class="meta-item">{p.data.duration}</span>}
                    {p.data.year && <span class="meta-item">{p.data.year}</span>}
                  </div>
                )}
              </div>
            </article>
          ))}
        </div>
      </section>
    ))}
  </div>
</Base>

<style>
  .category-section {
    margin-bottom: 3rem;
  }

  .category-title {
    font-size: 0.875rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: rgb(var(--muted));
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.25rem;
    }
  }

  @media (max-width: 640px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }

  .project-card {
    background: rgb(var(--bg));
    border: 1px solid rgba(var(--border), 0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    display: flex;
    flex-direction: column;
  }

  :global(html.dark) .project-card {
    background: rgba(var(--bg), 0.5);
    border-color: rgba(var(--border), 0.15);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    border-color: rgba(var(--border), 0.2);
  }

  :global(html.dark) .project-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  }

  .project-card.featured {
    border-color: rgba(59, 130, 246, 0.4);
    box-shadow: 0 2px 12px rgba(59, 130, 246, 0.15);
  }

  .project-card.featured:hover {
    border-color: rgba(59, 130, 246, 0.6);
    box-shadow: 0 8px 28px rgba(59, 130, 246, 0.25);
  }

  /* Project Image */
  .card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: rgba(var(--border), 0.03);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .card-image img {
    transform: scale(1.05);
  }

  /* Card Content */
  .card-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
    flex: 1;
  }

  /* Card Header */
  .card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 0.75rem;
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1.3;
    color: rgb(var(--fg));
    margin: 0;
    flex: 1;
  }

  .card-links {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .icon-link {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    background: rgba(var(--border), 0.06);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgb(var(--muted));
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .icon-link:hover {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    transform: translateY(-2px);
  }

  /* Tagline */
  .card-tagline {
    font-size: 0.875rem;
    color: rgb(var(--fg));
    line-height: 1.5;
    margin: 0;
    opacity: 0.9;
  }

  /* Tech Tags */
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-pill {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    background: rgba(var(--border), 0.08);
    color: rgb(var(--muted));
    border-radius: 6px;
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    text-transform: lowercase;
    transition: all 0.2s ease;
  }

  :global(html.dark) .tag-pill {
    background: rgba(var(--border), 0.12);
  }

  .tag-pill:hover {
    background: rgba(59, 130, 246, 0.15);
    color: #3b82f6;
  }

  /* Highlights */
  .card-highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .card-highlights li {
    font-size: 0.8125rem;
    color: rgb(var(--fg));
    line-height: 1.5;
    padding-left: 1.25rem;
    position: relative;
  }

  .card-highlights li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: rgb(var(--muted));
    font-weight: 600;
  }

  /* Metadata */
  .card-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    font-size: 0.75rem;
    color: rgb(var(--fg));
    opacity: 0.85;
    padding-top: 0.5rem;
    border-top: 1px solid rgba(var(--border), 0.08);
    margin-top: auto;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .meta-item::before {
    content: '';
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: rgb(var(--muted));
  }

  .meta-item:first-child::before {
    display: none;
  }
</style>


