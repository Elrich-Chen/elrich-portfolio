---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const rendered = await Promise.all(
  projects.map(async (p) => {
    const { Content } = await p.render();
    return { entry: p, Content };
  })
);

// Sort projects: order first, then featured, then by year (newest first)
const sortedProjects = rendered.sort((a, b) => {
  const orderA = a.entry.data.order ?? 999;
  const orderB = b.entry.data.order ?? 999;
  if (orderA !== orderB) return orderA - orderB;

  if (a.entry.data.featured && !b.entry.data.featured) return -1;
  if (!a.entry.data.featured && b.entry.data.featured) return 1;

  const yearA = parseInt(a.entry.data.year) || 0;
  const yearB = parseInt(b.entry.data.year) || 0;
  return yearB - yearA;
});
---

<Base title="Projects – Elrich Chen">
  <div class="mb-6">
    <a href="/" class="text-sm text-neutral-500 hover:text-neutral-900 transition-colors">← Back to home</a>
  </div>
  <h1 class="text-xl font-semibold mb-8">Projects</h1>

  <div class="projects-container pb-24">
    <div class="projects-grid">
      {sortedProjects.map(({ entry: p, Content }) => (
        <article class={`project-card ${p.data.featured ? 'featured' : ''}`}>
          <div class="card-content">
            {/* Project name + links + deployed badge */}
            <div class="card-header">
              <div class="title-wrapper">
                <div class="title-row">
                  {p.data.image && (
                    <div class="card-icon">
                      <img
                        src={p.data.image}
                        alt={p.data.name}
                        loading="lazy"
                        decoding="async"
                      />
                    </div>
                  )}
                  <h3 class="card-title">{p.data.name}</h3>
                </div>
                {p.data.deployed && (
                  <span class="deployed-badge">Deployed to Production</span>
                )}
              </div>
              <div class="card-links">
                {p.data.href && (
                  <a href={p.data.href} target="_blank" rel="noopener noreferrer" class="icon-link" title="View project">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
                    </svg>
                  </a>
                )}
              </div>
            </div>

            {/* Tagline */}
            {p.data.tagline && (
              <p class="card-tagline">{p.data.tagline}</p>
            )}

            {/* Tech Tags */}
            {p.data.tags && p.data.tags.length > 0 && (
              <div class="card-tags">
                {p.data.tags.map((tag: string) => (
                  <span class="tag-pill">{tag}</span>
                ))}
              </div>
            )}

            {/* Highlights */}
            {p.data.highlights && p.data.highlights.length > 0 && (
              <details class="card-details">
                <summary class="card-details-summary">
                  <span class="summary-collapsed">Read more</span>
                  <span class="summary-open">Show less</span>
                </summary>
                <ul class="card-highlights">
                  {p.data.highlights.map((highlight: string) => (
                    <li>{highlight}</li>
                  ))}
                </ul>
              </details>
            )}

            {/* Metadata */}
            {(p.data.role || p.data.duration || p.data.year) && (
              <div class="card-meta">
                {p.data.role && <span class="meta-item">{p.data.role}</span>}
                {p.data.duration && <span class="meta-item">{p.data.duration}</span>}
                {p.data.year && <span class="meta-item">{p.data.year}</span>}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</Base>

<style>
  .projects-container {
    width: 100%;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 900px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
  }

  @media (max-width: 640px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }

  .project-card {
    background: rgb(var(--bg));
    border: 1px solid rgba(var(--border), 0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    display: flex;
    flex-direction: column;
  }

  :global(html.dark) .project-card {
    background: rgba(var(--bg), 0.5);
    border-color: rgba(var(--border), 0.15);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    border-color: rgba(var(--border), 0.2);
  }

  :global(html.dark) .project-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  }

  .project-card.featured {
    border-color: rgba(59, 130, 246, 0.4);
    box-shadow: 0 2px 12px rgba(59, 130, 246, 0.15);
  }

  .project-card.featured:hover {
    border-color: rgba(59, 130, 246, 0.6);
    box-shadow: 0 8px 28px rgba(59, 130, 246, 0.25);
  }

  /* Card Content */
  .card-content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex: 1;
  }

  /* Card Header */
  .card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .title-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .title-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .card-icon {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: rgba(var(--border), 0.06);
    border: 1px solid rgba(var(--border), 0.1);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    flex-shrink: 0;
  }

  :global(html.dark) .card-icon {
    background: rgba(var(--border), 0.12);
    border-color: rgba(var(--border), 0.2);
  }

  .card-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-title {
    font-size: 1rem;
    font-weight: 700;
    line-height: 1.3;
    color: rgb(var(--fg));
    margin: 0;
  }

  .deployed-badge {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    border-radius: 6px;
    font-size: 0.625rem;
    font-weight: 700;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
    width: fit-content;
  }

  .card-links {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .icon-link {
    width: 28px;
    height: 28px;
    border-radius: 6px;
    background: rgba(var(--border), 0.06);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgb(var(--muted));
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .icon-link:hover {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    transform: translateY(-2px);
  }

  /* Tagline */
  .card-tagline {
    font-size: 0.9rem;
    color: rgb(var(--fg));
    font-weight: 500;
    line-height: 1.5;
    margin: 0;
  }

  /* Tech Tags */
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag-pill {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    background: rgba(var(--border), 0.08);
    color: rgb(var(--muted));
    border-radius: 5px;
    font-size: 0.625rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    text-transform: lowercase;
    transition: all 0.2s ease;
  }

  :global(html.dark) .tag-pill {
    background: rgba(var(--border), 0.12);
  }

  .tag-pill:hover {
    background: rgba(59, 130, 246, 0.15);
    color: #3b82f6;
  }

  /* Highlights */
  .card-highlights {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .card-details {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .card-details-summary {
    order: 2;
    cursor: pointer;
    list-style: none;
    font-size: 0.7rem;
    font-weight: 600;
    color: rgb(var(--muted));
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    width: fit-content;
    border-bottom: 1px solid rgba(var(--border), 0.2);
    transition: color 0.2s ease, border-color 0.2s ease;
  }

  .card-details-summary:hover {
    color: rgb(var(--fg));
    border-bottom-color: rgba(var(--border), 0.5);
  }

  .card-details-summary::-webkit-details-marker {
    display: none;
  }

  .card-details-summary::marker {
    content: '';
  }

  .card-details .card-highlights {
    order: 1;
  }

  .card-details:not([open]) .card-highlights li:nth-child(n + 4) {
    display: none;
  }

  .summary-open {
    display: none;
  }

  .card-details[open] .summary-open {
    display: inline;
  }

  .card-details[open] .summary-collapsed {
    display: none;
  }

  .card-highlights li {
    font-size: 0.82rem;
    color: rgb(var(--fg));
    line-height: 1.45;
    padding-left: 1.1rem;
    position: relative;
  }

  @media (hover: hover) and (pointer: fine) {
    .project-card:hover .card-details:not([open]) .card-highlights li,
    .project-card:focus-within .card-details:not([open]) .card-highlights li {
      display: list-item;
    }

    .project-card:hover .card-details-summary,
    .project-card:focus-within .card-details-summary {
      color: rgb(var(--fg));
      border-bottom-color: rgba(var(--border), 0.4);
    }
  }

  .card-highlights li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: rgb(var(--muted));
    font-weight: 600;
  }

  /* Metadata */
  .card-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    font-size: 0.7rem;
    color: rgb(var(--fg));
    opacity: 0.85;
    padding-top: 0.4rem;
    border-top: 1px solid rgba(var(--border), 0.08);
    margin-top: auto;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .meta-item::before {
    content: '';
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: rgb(var(--muted));
  }

  .meta-item:first-child::before {
    display: none;
  }
</style>
